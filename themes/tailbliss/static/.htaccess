# Enable RewriteEngine for pretty URLs
RewriteEngine On

# Redirect requests to the Hugo-generated HTML files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /$1.html [L,QSA]

# Set the default index file
DirectoryIndex index.html

# Caching for static files
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 1 hour"
  ExpiresByType image/jpg "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
</IfModule>

# Security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "DENY"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Password protect /members-only directory
<Directory "/members-only/">
  AuthType Basic
  AuthName "Restricted Area"
  AuthUserFile .htpasswd
  Require valid-user
</Directory>

# Password protect /members-only/MAG-contact-sheet-20240901.pdf
<Files "/members-only/MAG-contact-sheet-20240901.pdf">
  AuthType Basic
  AuthName "Restricted Area"
  AuthUserFile .htpasswd
  Require valid-user
</Files>

